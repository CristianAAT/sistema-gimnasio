
@{
    ViewData["Title"] = "Socios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Newtonsoft.Json;
@model SistemaGYM.Models.Socio


<body onload="Inscripciones.Filtrar(1, ''); Inscripciones.Fecha();">

    <h1 class="text-center"><i class="fas fa-user-circle"></i>   Socios inscritos</h1>
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-3">
                <a class="btn btn-outline-primary" data-target="#mAgregar" data-toggle="modal">
                    Inscribir nuevo socio
                </a>
            </div>
            <div id="alerta">
                <div class="alert alert-dismissible fade">
                </div>
            </div>
        </div>
    </div>

    <div class="row space-top-md">
        <div class="col-md-4">
            <input onKeyUp="Inscripciones.Buscar();" id="filtrar" name="Search" placeholder="Buscar Socio" class="form-control" />
        </div>
        <div class="def-number-input number-input safari_only col-md-2">
            <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" class="minus"></button>
            <input class="quantity" min="3" max="12" name="quantity" value="4" type="number" id="RegsPerPag" />
            <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus"></button>
        </div>
        <div class="col-md-6">
            <a onclick="Inscripciones.Buscar();" class="btn btn-info">Buscar</a>
        </div>
    </div>

    <div>
        <div class="container-fluid">
            <div>
                <div class="row" id="ResultDeck">

                </div>
            </div>
            <div class="space-top-lg">
                <div id="InfoDeck"></div>
                <div id="NavegadorDeck"></div>
            </div>
        </div>
    </div>

    <!--Modal para asegurar-->
    <div class="modal fade" data-backdrop="static" id="mEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Contenido-->
                <div class="modal-header">
                    <!--Cabezera-->
                    <h4 class="modal-title text-center" id="myModalLabel">Eliminar inscripcion del socio</h4>
                </div>
                <div class="modal-body">
                    <!--Cuerpo del modal-->
                    <div>
                        <div class="row">
                            <h3 class="text-center">¿Estas seguro de eliminar a este registro?</h3>
                        </div>
                        <br />
                        <div class="justify-content-center row">
                            <button class="btn btn-info" data-dismiss="modal">Cancelar</button>
                            <div class=" col-3"></div>
                            <a class=" btn btn-warning" onclick="Inscripciones.Eliminar()">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<partial name="~/Views/_ViewImports.cshtml" />
<partial name="ModalAgregar.cshtml" />
<partial name="ModalEditar.cshtml" />
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
