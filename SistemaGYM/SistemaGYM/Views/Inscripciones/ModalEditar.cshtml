@model SistemaGYM.Models.Socio
<!--Modal de Editar, vista parcial-->
<div class="modal fade" data-backdrop="static" id="mEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Contenido-->
            <div class="modal-header">
                <!--Cabezera-->
                <h4 class="modal-title" id="myModalLabel">Detalles del socio e inscripcion</h4>
                <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close" onclick="Inscripciones.ClearModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <center>
                <div class="form-group">
                    <div class="col-md-5">
                        <img src="~/Inscripciones/default.png" id="mEditar_Output" class="img-fluid img-thumbnail" />
                    </div>
                </div>
                <p></p>
                <div class="form-group btn btn-success text-light">
                    <label for="files">Cargar foto</label>
                    <div class="col-md-10">
                        <input accept="image/*" class="file-input" type="file" id="inputFileEditar" name="inputFileEditar" onchange="Inscripciones.LoadFileEditar(event);" />
                    </div>
                </div>
            </center>
            <form method="post" class="Editar" name="fEditar" id="fEditar">
                <div class="modal-body">
                    <!--Cuerpo del modal-->
                    <div class="form-group">
                        <input asp-for="SocioID" placeholder="ID del socio" class="form-control" id="mEditar_SocioID" hidden />
                        <div class="col-md-10">
                            <label>Nombre completo</label>
                            <input asp-for="FullName" placeholder="Nombre completo del socio" class="form-control" id="mEditar_FullName" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Correo electronico</label>
                            <input asp-for="Email" placeholder="Correo electronico" class="form-control" id="mEditar_Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Numero de telefono</label>
                            <input asp-for="PhoneNumber" placeholder="Telefono celular" class="form-control" id="mEditar_PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Fecha de nacimiento</label>
                            <input asp-for="BirthDate" placeholder="Fecha de nacimiento" type="date" class="form-control" id="mEditar_BirthDate" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Fecha de inscripcion</label>
                            <input asp-for="InscriptionDate" readonly="readonly" class="form-control" type="date" id="mEditar_InscriptionDate" />
                            <span asp-validation-for="InscriptionDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Expiracion de la inscripcion</label>
                            <input asp-for="InscriptionExpiration" readonly="readonly" type="date" class="form-control" id="mEditar_InscriptionExpiration" />
                            <span asp-validation-for="InscriptionDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-10">
                            <label>Costo de la inscripcion</label>
                            <input asp-for="InscriptionCost" readonly="readonly" class="form-control" value="1000.0" id="mEditar_InscriptionCost" />
                            <span asp-validation-for="InscriptionCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Pie del modal-->
                <div class="modal-footer">
                    <div>
                        <span id="mensaje" class="text-danger"></span>
                        <input type="text" required class="hidden" />
                    </div>
                    <button class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" onclick="Inscripciones.Editar()">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="~/Views/_ViewImports.cshtml" />
